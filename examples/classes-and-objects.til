class user (name birth_year) {
    set active true

    proc to_string () {
        return <$this name> [
            if (<$this active> == false) {return " (inactive)"}
            ] " was born in " <$this birth_year>
    }

    proc deactivate () {
        set $this active false
    }
    proc activate () {
        set $this active true
    }
}

